{
  "name": "@adopt-a-student/api",
  "version": "0.0.0",
  "description": "API for adopt-a-student",
  "author": "Elias Mangoro",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "nohoist": [
    "**/*jest*",
    "**/*jest*/**"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc --build tsconfig.build.json",
    "prebuild": "yarn && rm -rf lib && yarn lint",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "predeploy": "yarn build",
    "logs": "firebase functions:log",
    "start-emulators": "cross-env FIRESTORE_EMULATOR_HOST=\"localhost:8080\" firebase emulators:start"
  },
  "engines": {
    "node": "12"
  },
  "dependencies": {
    "firebase": "^8.4.1",
    "firebase-admin": "^9.6.0",
    "firebase-functions": "^3.13.2",
    "@adopt-a-student/common": "file:./common"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "jest": "^26.6.3",
    "typescript": "^3.8.0"
  },
  "private": true
}