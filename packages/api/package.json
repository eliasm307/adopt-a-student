{
  "name": "@adopt-a-student/api",
  "version": "0.0.0",
  "description": "API for adopt-a-student",
  "author": "Elias Mangoro",
  "license": "MIT",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "nohoist": [
    "**/*jest*",
    "**/*jest*/**",
    "**/@adopt-a-student/**",
    "**/@adopt-a-student*"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "test": "jest --colors --logHeapUsage",
    "pretest": "yarn",
    "test:production": "set NODE_ENV=production-test&& yarn test",
    "check-types": "npx tsc",
    "cleanbuild": "rm -rf node_modules && yarn build",
    "saveCallableNames": "npx ts-node src/scripts/saveCallableNames.ts",
    "prebuild": "yarn saveCallableNames && yarn build:common && npx tsc && rm -rf lib && yarn",
    "build": "tsc --build tsconfig.build.json",
    "build:common": "yarn --cwd ./common build",
    "build:hot-reload": "tsc --build tsconfig.build.json --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "predeploy": "yarn build && yarn tsoa:build",
    "deploy": "firebase deploy --only functions",
    "preinstall": "yarn install:common",
    "install:common": "yarn --cwd ./common",
    "logs": "firebase functions:log",
    "start-emulators": "set FIRESTORE_EMULATOR_HOST=localhost:8080&& set NODE_ENV=development&& firebase emulators:start",
    "typedoc": "yarn docs:generate && yarn docs:zip && yarn docs:start",
    "predocs": "yarn docs:delete",
    "docs:delete": "rm -rf ./docs && rm -rf ./docs.zip",
    "docs:generate": "npx typedoc --disableSources --name \"Adopt a student\" --out docs src",
    "docs:zip": "cd docs/ && bestzip ../adopt-a-student-docs.zip * && cd ../",
    "docs:start": "start \"\" \"docs/index.html\"",
    "tsoa:build": "yarn tsoa spec",
    "tsoa:start": "start http://localhost:3000/ && node lib/src/tsoa-docs/server.js",
    "tsoa:start:hot": "yarn tsoa:build && start http://localhost:3000/ && concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "tsoa:buildstart:hot": "yarn build && tsoa:start:hot",
    "tsoa:buildstart": "yarn build && yarn tsoa:build && start http://localhost:3000/ && node lib/src/tsoa-docs/server.js"
  },
  "engines": {
    "node": "12"
  },
  "dependencies": {
    "@adopt-a-student/common": "file:common",
    "@types/uuid": "^8.3.0",
    "cors": "^2.8.5",
    "firebase": "^8.4.1",
    "firebase-admin": "^9.6.0",
    "firebase-functions": "^3.13.2",
    "locale-codes": "^1.3.1",
    "redoc": "^2.0.0-rc.53",
    "redoc-express": "^1.0.0",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^3.6.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.2",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "bestzip": "^2.2.0",
    "body-parser": "^1.19.0",
    "concurrently": "^6.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.0",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "firebase-functions-test": "^0.2.3",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4",
    "url-exist-sync": "^1.0.2"
  },
  "private": true
}