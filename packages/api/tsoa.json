{
  "_entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": [ "src/controllers/**/Controller.ts" ],
  "spec": {
    "specFileBaseName": "swagger-spec",
    "outputDirectory": "tsoa-build",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "tsoa-build",
    "noWriteIfUnchanged": true,
    "useSuccessResponseCode": false
  },
  "compilerOptions": {
    "_1": "/* Basic Options */",
    "incremental": true,
    "_target": "es2017",
    "target": "es6",
    "module": "commonjs",
    "outDir": "tsoa-build",
    "typeRoots": [ "./node_modules/@types" ],
    "types": [ "@types/jest", "@types/node" ],

    "_2": "/* Strict Type-Checking Options */",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "_3": "/* Additional Checks */",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "_4": "/* Module Resolution Options */",
    "_moduleResolution": "node",
    "_baseUrl": ".",
    "paths": {
      "@adopt-a-student/common": [ "./common/src/" ]
    },
    "_esModuleInterop": true,

    "_5": "/* Experimental Options */",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "_6": "/* Advanced Options */",
    "forceConsistentCasingInFileNames": true
  }
}